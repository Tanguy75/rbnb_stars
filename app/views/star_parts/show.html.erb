<div class="container mt-4">
  <%= link_to "Back to list", star_parts_path, class: "btn btn-primary  mb-2", id:"button-back-home" %>

  <div class="row">
    <div class="col rounded bg-light shadow-sm p-5 m-2">
      <%= cl_image_tag(@star_part.photo.key, :width => 500) %>
    </div>
    <div class="col rounded bg-light shadow-sm py-5 flex-column m-2">
      <h4 class="text-primary"><%= @star_part.name_of_part.capitalize %></h4>
      <h5> Artist: <strong><%= @star_part.name_of_star %></strong></h5>
      <h5> Rating:
      <% count = 0 %>
        <% @star_part.rating.times do %>
          <% if @star_part.rating > count %>
            <i class="fa fa-star text-danger"></i>
          <% else %>
            <i class="fa fa-star text-danger"></i>
          <% end %>
          <% count += 1 %>
        <% end %></h5>
      <h6> Category: <%= @star_part.category.capitalize %></h6>

      <br>
      <h6> <strong> Description: </strong> <h6>
      <p> <%= @star_part.description %> </p>
      <div class="d-flex justify-content-between ">
        <h5> <strong>Price:</strong> â‚¬  <%= @star_part.price %> / day</h5>
      </div>
      <br>
      <button type="button" class="btn btn-primary mr-3" data-toggle="modal" data-target="#exampleModal">
        Book Now!
      </button>
      <br>
      <br>
  <% if policy(@star_part).edit? && policy(@star_part).destroy? %>

  <% if policy(@star_part).edit? %>
    <%= link_to "Update", edit_star_part_path(@star_part), class: "btn-sm btn-secondary mt-5 mb-5" %>
  <% end %>
  or
  <% if policy(@star_part).destroy? %>
    <%= link_to 'Delete', star_part_path(@star_part), class: "btn-sm btn-secondary mt-5 mb-5", method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
  <% end %>
    </div>
  </div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Book</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
            <%= simple_form_for [@star_part, Booking.new] do |f| %>
            <%= f.input :start_date, as: :string, required: true, input_html: {class: "datepicker"} %>
            <%= f.input :end_date, as: :string, required: true, input_html: {class: "datepicker"} %>
            <%= f.input :price, as: :string, disabled: true, input_html: {value: @star_part.price} %>
            <%= f.submit "Book", class: "btn btn-success"%>
            <% end %>

            <% @star_part.unavailable_dates.each do |date|%>
              <div class="unavailable-dates" data-unavailable=<%= date %>></div>
            <% end %>
      </div>
    </div>
  </div>
</div>
</div>

<div class="container">
  <div
    id="map"
    style="width: 100%;
    height: 400px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

<!-- render "reviews/form", booking: @booking, review: @review %> -->

</div>
