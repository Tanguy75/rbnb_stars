<div class="container mt-3" >
  <h1 class ="title-products-display">Get the body of <strong>your dreams</strong></h1>
  <div class="d-flex justify-content-between ">
    <h2 class ="title-products-collection">Explore our Collection</h1>
    <%= link_to "Add new part", "#", class: "btn btn-warning", id: "button-part" %>
  </div>
  <div class="cards">
    <% @star_parts.each do |part| %>
      <div class="card-trip">
        <img src="https://images.unsplash.com/photo-1526758097130-bab247274f58?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" />
        <div class="card-trip-infos">
          <div>
            <small>
              <% count = 0 %>
              <% part.rating.times do %>
                <% if part.rating > count %>
                  <i class="fa fa-star text-danger"></i>
                <% else %>
                  <i class="fa fa-star text-danger"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <h5 class="text-primary"><%= link_to part.name_of_part.capitalize(), "#" %></h5>
            <h6>From: <strong><%= part.name_of_star %></strong></h6>
            <%= link_to "Book now", "#", class: "btn btn-primary" %>
          </div>
        <h2 class="card-trip-pricing"> â‚¬ <%= part.price  %> </h2>
        <%= image_tag "manager.jpg", alt: "alttext", class: "card-trip-user avatar-bordered" %>
      </div>
  </div>
<% end %>
</div>
<div class="container mt-2 align-content-center" >
  <%= link_to "Back Home", "#", class: "btn btn-danger", id:"button-back-home" %>
</div>
