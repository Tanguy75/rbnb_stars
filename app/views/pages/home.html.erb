<div class="banner">
  <%= image_tag "landing.png", alt: "alttext" %>
  <div class="container-text">
    <h1>Be the brightest star of them all <em>l'espace d'un instant</em></h1>
    <%= link_to "Discover the parts", star_parts_path, class: "btn btn-light mt-5"  %>
  </div>
</div>

<div class="container mt-5">

<h2><strong>The 10 best rated body parts</strong></h2>
<div class="your-class m-5 cards">
  <% @star_parts.each do |part| %>
      <div class="card-trip">
        <img src="https://images.unsplash.com/photo-1526758097130-bab247274f58?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80" />
        <div class="card-trip-infos">
          <div>
            <small>
              <% count = 0 %>
              <% part.rating.times do %>
                <% if part.rating > count %>
                  <i class="fa fa-star"></i>
                <% else %>
                  <i class="fa fa-star"></i>
                <% end %>
                <% count += 1 %>
              <% end %>
            </small>
            <h5><%= part.name_of_part.capitalize() %></h5>
            <h6>From: <strong><%= part.name_of_star %></strong></h6>
          </div>
        <h2 class="card-trip-pricing"> € <%= part.price  %> </h2>
        <%= image_tag "manager.jpg", alt: "alttext", class: "card-trip-user avatar-bordered" %>
      </div>
  </div>
<% end %>
</div>

